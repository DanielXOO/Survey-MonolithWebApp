@model iTechArt.Surveys.WebApp.ViewModels.UserRegistrationViewModel

<main>
    <div id="form">
        <div id="form_logo">
            <img src="~/images/logo_iTechArt.svg" height="50px" />
        </div>

        <div class="errors" asp-validation-summary="All"></div>

        <form asp-controller="Account" asp-action="Registration">
            <div class="form_field">
                <input asp-for="Name" type="text" class="input_form" , placeholder="Name" />
            </div>
            <div class="form_field">
                <input asp-for="Login" type="text" class="input_form" , placeholder="Login" />
            </div>
            <div class="form_field">
                <input asp-for="Password" type="password" class="input_form" , placeholder="Password" />
            </div>
            <div class="form_field">
                <input asp-for="ConfirmPassword" type="password" class="input_form" , placeholder="Repeat password" />
            </div>
            <div class="form_field">
                <button class="post_form">Sign Up</button>
            </div>
            <div class="form_field">
                <a class="link" asp-action="Login" asp-controller="Account">Sign In</a>
            </div>
        </form>
    </div>
</main>