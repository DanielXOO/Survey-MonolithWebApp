@using iTechArt.Surveys.DomainModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" runat="server" asp-append-version="true">
    <script src="~/lib/jquery/jquery.js"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <div id="logo">
            <img src="~/images/logo_iTechArt.svg" height="30px" />
        </div>
        <div id="menu">
            @if (@User.Identity.IsAuthenticated)
            {
                <span>Hello, @User.Identity?.Name</span>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account">Login</a>
            }
        </div>
    </header>
<main>
    <div id="side-menu">
        @if (@User.Identity.IsAuthenticated)
        {
            @if (@User.IsInRole(@RoleNames.Admin))
            {
                <a asp-controller="Users" asp-action="Index">
                    <p class="side-menu-pos">Users</p>
                </a>
            }
            <a asp-controller="Surveys" asp-action="Index">
                <p class="side-menu-pos">Surveys</p>
            </a>
        }
    </div>
    <div id="content">
        @RenderBody()
    </div>
</main>
@await RenderSectionAsync("Scripts", false)
</body>
</html>