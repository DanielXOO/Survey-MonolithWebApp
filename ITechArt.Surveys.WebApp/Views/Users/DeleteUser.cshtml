@model iTechArt.Surveys.WebApp.ViewModels.UserDeleteViewModel

<p class="title">Delete @Model.UserName?</p>

<form method="post" asp-controller="Users"
      asp-action="DeleteConfirm" asp-route-Id="@Model.Id"
      asp-route-ReturnUrl="@Model.ReturnUrl"
      class="attention-form">
    <input type="submit" class="submit-button" value="Delete" />
    <input type="button" class="discard-button" onclick="location.href = '@Model.ReturnUrl'" value="Cancel" />
</form>

<div class="errors" asp-validation-summary="All"></div>